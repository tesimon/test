{# src/_includes/sections/team.njk #}
<!-- Team Start -->
<div class="container-fluid team py-6">
    <div class="container">
        <div class="text-center wow bounceInUp" data-wow-delay="0.1s">
            <small class="d-inline-block fw-bold text-dark text-uppercase bg-light border border-primary rounded-pill px-4 py-1 mb-3">{{ team.title }}</small>
            <h1 class="display-5 mb-5">{{ team.subtitle }}</h1>
        </div>
        <div class="row g-4">
            {% for member in team.members %}
            <div class="col-lg-3 col-md-6 wow bounceInUp" data-wow-delay="{{ 0.1 + loop.index0 * 0.2 }}s">
                <div class="team-item rounded">
                    <img class="img-fluid rounded-top" src="{{ member.image }}" alt="{{ member.name }}">
                    <div class="team-content text-center py-3 bg-dark rounded-bottom">
                        <h4 class="text-primary">{{ member.name }}</h4>
                        <p class="text-white mb-0">{{ member.position }}</p>
                    </div>
                    <div class="team-icon d-flex flex-column justify-content-center m-4">
                        <a class="share btn btn-primary btn-md-square rounded-circle mb-2" href="#">
                            <i class="fas fa-share-alt"></i>
                        </a>
                        {% for social in member.social %}
                        <a class="share-link btn btn-primary btn-md-square rounded-circle mb-2" href="{{ social.url }}">
                            <i class="{{ social.icon }}"></i>
                        </a>
                        {% endfor %}
                    </div>
                </div>
            </div>
            {% endfor %}
        </div>
    </div>
</div>
<!-- Team End -->